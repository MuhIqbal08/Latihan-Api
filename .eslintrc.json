{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-undef": "off",
        "class-methods-use-this": "off",
        "no-alert": "off"
    },
    "overrides": [
        {
            "files": ["*.html"],
            "parser": "@babel/eslint-parser",
            "parserOptions": {
                "ecmaVersion": 6,
                "sourceType": "module"
            }
        }
    ],
    "ignorePatterns": ["dist/bundle.js"]
}
